<% for(let s of categories) { %>
    <div class="col-lg-12 col-sm-12 mb-4">
        <div class="portfolio-item">
            <a class="portfolio-link"  href="/category/<%=s.name%>">
                <img class="img-fluid" src="/<%= s.category_image %>" alt="<%= s.name %>" />
            </a>
            <div class="portfolio-caption">
                <div class="portfolio-caption-heading"><%= s.name %></div>
            </div>
        </div>
    </div>
<% } %>