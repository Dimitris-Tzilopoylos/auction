                        <% }else{ %>
                            <div class="  mb-0 font-weight-bold text-gray-800" id="last_bidder"></div>
                            <div class="mb-0 font-weight-bold text-gray-700" style="font-size:10px" id="last_bidder_date"></div>
                        <% } %>
                    </div>
