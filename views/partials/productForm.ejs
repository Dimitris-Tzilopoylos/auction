<form action="/dashboard/update-product" id="productForm" class="row card shadow p-2" style="display:none;margin:0 auto;" method="POST">
    <div class="col-md-12">
        <h4 class="text-center">Product</h4>
        <hr/>
    </div>
    <div class="form-group col-md-6">
        <label for="name">Product Name</label>
        <input class="form-control" type="text" name="name" id="name" value="<%= product && product.name %>" />
    </div>
 
    <div class="form-group col-md-6">
        <label for="name">Status</label>
        <select name="status" id="status" class="form-control">
            <option value="" class=""></option>
            <option value="NEW" class="" <%= product && product.status == "NEW" ? 'selected' : '' %>>NEW</option>
            <option value="READY" class="" <%= product && product.status == "READY" ? 'selected' : '' %>>READY</option>
            <option value="SOLD" class="" <%= product && product.status == "SOLD" ? 'selected' : '' %>>SOLD</option>
        </select>
    </div>
    <input type="hidden" name="product_id" value="<%= product._id %>">
    <div class="form-group col-md-6">
        <label for="bid_date" class="col-12 col-form-label">Start Date</label>
        <div class="col-12">
          <input class="form-control" id="bid_date" name="bid_date" type="datetime-local" value="<%= product  && product.bid_date &&  product.bid_date.toISOString().split('.')[0] %>"  >
        </div>
    </div>
    <div class="form-group col-md-6">
        <label for="bid_end_date" class="col-12 col-form-label">End Date</label>
        <div class="col-12">
          <input id="bid_end_date" name="bid_end_date" class="form-control" type="datetime-local" value="<%= product && product.bid_end_date && product.bid_end_date.toISOString().split('.')[0] %>"  >
        </div>
    </div>
    <div class="form-group col-md-12">
        <textarea name="description" id="description" cols="30" rows="10" class="form-control" placeholder="Product Description" >
            <%= product && product.description %>
        </textarea>
    </div>
    <div class="form-group col-md-6">
        <label for="start_price" class="col-12 col-form-label">Starting Price</label>
        <input type="number" name="start_price" id="start_price" step="0.01" class="form-control" min="0" max="1000000000000" value="<%= product && product.start_price %>">
    </div>
    <div class="form-group col-md-6">
        <label for="currency" class="col-12 col-form-label">Currency</label>
         <select name="currency" id="currency" class="form-control" value="<%= product && product.currency.iso %>">
             <option value="EUR" <%= product && product.currency.iso == "EUR" ? 'selected': '' %> ><b>&euro;</b></option>
             <option value="GBP" <%= product && product.currency.iso == "GBP" ? 'selected': '' %>><b>£</b></option>
             <option value="RON" <%= product && product.currency.iso == "RON" ? 'selected': '' %>><b>lei</b></option>
             <option value="SEK" <%= product && product.currency.iso == "SEK" ? 'selected': '' %>><b>kr</b></option>
             <option value="PLN" <%= product && product.currency.iso == "PLN" ? 'selected': '' %>><b>zł</b></option>
         </select>
    </div>
    <div class="col-md-12 form-group my-2">
        <button class="btn-block btn-primary w-100" type="submit">Update</button>
    </div>
</form>